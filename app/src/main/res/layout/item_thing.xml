<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_rounded_corner_shape"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:stateListAnimator="@animator/zoom_out_animator"
        android:focusable="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="@dimen/pageMarginAndOffset"
        android:layout_marginRight="@dimen/pageMarginAndOffset">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:cardCornerRadius="15dp"
            android:layout_marginBottom="10dp">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/thing_image"
                android:scaleType="centerCrop"
                android:contentDescription="Thing Image" />
    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/thing_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fcfcf9"
            android:textSize="20sp"
            android:text="Museum A"
            android:gravity="center" />

</LinearLayout>
