<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/item_rounded_corner_shape"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:stateListAnimator="@animator/zoom_out_animator"
        android:focusable="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="10dp">

    <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="15dp"
            android:layout_marginBottom="10dp">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/thing_image"
                android:scaleType="centerCrop"
                android:contentDescription="Thing Image" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/thing_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fcfcf9"
                android:textSize="20sp"
                android:text="Museum A"
                android:gravity="center" />

        <TextView
                android:id="@+id/thing_short"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fcfcf9"
                android:textSize="16sp"
                android:text="Museum A"
                android:gravity="center" />
    </LinearLayout>

</LinearLayout>
