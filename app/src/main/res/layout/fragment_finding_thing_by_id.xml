<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.fragments_thing_finding.FindingThingByIDFragment"
        android:orientation="vertical"
        android:gravity="center">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:text="Tìm kiếm bằng mã số"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="18dp"
            android:textSize="18sp" />

    <TextView
            android:text="Nhập số được gắn trên bảng mô tả hiện vật"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/findThingByIDTextView"
            android:textSize="20sp"
            android:singleLine="false"
            android:maxLines="2"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView6"
            android:layout_marginTop="20dp" />

    <TextView
            android:text="435739"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/thing_id_tv"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="normal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/findThingByIDTextView"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@id/dial_layout" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/thing_id_tv"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/dial_layout">

        <androidx.gridlayout.widget.GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gridLayout">

            <Button
                    android:text="1"
                    android:id="@+id/num_1"
                    app:layout_row="0"
                    app:layout_column="0"
                    style="@style/number_button" />

            <Button
                    android:text="2"
                    android:id="@+id/num_2"
                    app:layout_row="0"
                    app:layout_column="1"
                    style="@style/number_button" />

            <Button
                    android:text="3"
                    android:id="@+id/num_3"
                    app:layout_row="0"
                    app:layout_column="2"
                    style="@style/number_button" />

            <Button
                    android:text="4"
                    android:id="@+id/num_4"
                    app:layout_row="1"
                    app:layout_column="0"
                    style="@style/number_button" />

            <Button
                    android:text="5"
                    android:id="@+id/num_5"
                    app:layout_row="1"
                    app:layout_column="1"
                    style="@style/number_button" />

            <Button
                    android:text="6"
                    android:id="@+id/num_6"
                    app:layout_row="1"
                    app:layout_column="2"
                    style="@style/number_button" />

            <Button
                    android:text="7"
                    android:id="@+id/num_7"
                    app:layout_row="2"
                    app:layout_column="0"
                    style="@style/number_button" />

            <Button
                    android:text="8"
                    android:id="@+id/num_8"
                    app:layout_row="2"
                    app:layout_column="1"
                    style="@style/number_button" />

            <Button
                    android:text="9"
                    android:id="@+id/num_9"
                    app:layout_row="2"
                    app:layout_column="2"
                    style="@style/number_button" />

            <Button
                    android:text="0"
                    android:id="@+id/num_0"
                    app:layout_row="3"
                    app:layout_column="1"
                    style="@style/number_button" />

            <ImageButton
                    android:src="@drawable/baseline_search_24"
                    app:layout_row="3"
                    app:layout_column="2"
                    android:padding="20dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/search_thing_button"
                    style="@style/search_button" />

            <ImageButton
                    android:src="@drawable/delete"
                    android:id="@+id/delete_num_button"
                    app:layout_row="3"
                    app:layout_column="0"
                    style="@style/delete_button" />

        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
