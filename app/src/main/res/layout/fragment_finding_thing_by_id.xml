<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments_thing_finding.FindingThingByIDFragment"
        android:orientation="vertical"
        android:gravity="center">

    <TextView
            android:text="Nhập số được gắn trên bảng mô tả hiện vật"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/findThingByIDTextView"
            android:textColor="@color/white"
            android:layout_marginBottom="15dp"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:singleLine="false"
            android:maxLines="2"
            android:gravity="center" />

    <TextView
            android:text="435739"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/thing_id_tv"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:layout_marginBottom="10dp"
            android:textStyle="normal" />

    <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gridLayout">

        <Button
                android:text="1"
                android:id="@+id/num_1"
                app:layout_row="0"
                app:layout_column="0"
                style="@style/number_button" />

        <Button
                android:text="2"
                android:id="@+id/num_2"
                app:layout_row="0"
                app:layout_column="1"
                style="@style/number_button" />

        <Button
                android:text="3"
                android:id="@+id/num_3"
                app:layout_row="0"
                app:layout_column="2"
                style="@style/number_button" />

        <Button
                android:text="4"
                android:id="@+id/num_4"
                app:layout_row="1"
                app:layout_column="0"
                style="@style/number_button" />

        <Button
                android:text="5"
                android:id="@+id/num_5"
                app:layout_row="1"
                app:layout_column="1"
                style="@style/number_button" />

        <Button
                android:text="6"
                android:id="@+id/num_6"
                app:layout_row="1"
                app:layout_column="2"
                style="@style/number_button" />

        <Button
                android:text="7"
                android:id="@+id/num_7"
                app:layout_row="2"
                app:layout_column="0"
                style="@style/number_button" />

        <Button
                android:text="8"
                android:id="@+id/num_8"
                app:layout_row="2"
                app:layout_column="1"
                style="@style/number_button" />

        <Button
                android:text="9"
                android:id="@+id/num_9"
                app:layout_row="2"
                app:layout_column="2"
                style="@style/number_button" />

        <Button
                android:text="0"
                android:id="@+id/num_0"
                app:layout_row="3"
                app:layout_column="1"
                style="@style/number_button" />

        <ImageButton
                android:src="@android:drawable/ic_menu_search"
                app:layout_row="3"
                app:layout_column="2"
                android:id="@+id/search_thing_button"
                style="@style/search_button" />

        <ImageButton
                android:src="@drawable/delete"

                android:id="@+id/delete_num_button"
                app:layout_row="3"
                app:layout_column="0"
                style="@style/delete_button" />

    </androidx.gridlayout.widget.GridLayout>
</LinearLayout>