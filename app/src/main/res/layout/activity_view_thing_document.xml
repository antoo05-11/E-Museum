<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ViewThingDocumentActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical"
            android:translationZ="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp">

        <ImageButton
                android:src="@drawable/baseline_arrow_back_ios_24"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/back_button"
                android:background="@drawable/circle_back_button"
                android:scaleType="fitCenter"
                android:paddingStart="8dp"
                android:stateListAnimator="@animator/zoom_out_animator"
                tools:ignore="ContentDescription,RtlSymmetry" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/top_bar_text_view"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                android:textColor="@color/white" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/player_view_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="10dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    app:fontWeight="700"
                    android:textStyle="bold"
                    android:text="Tên gọi"
                    android:textSize="30sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:id="@+id/thing_name_text_view"
                    tools:ignore="UnusedAttribute" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tầng 3"
                    android:gravity="center"
                    android:id="@+id/thing_position_text_view" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word"
                        android:text="Nguồn gốc: "
                        android:textSize="18sp"
                        android:textStyle="bold" />

                <TextView
                        android:id="@+id/thing_origin_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="18sp"
                        android:textColor="@android:color/holo_orange_light" />
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="5dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Niên đại: " />

                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/thing_age_text_view"
                        android:textSize="18sp"
                        android:textColor="@android:color/holo_orange_light" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                <TextView
                        android:text="Kích thước: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/thing_size_text_view"
                        android:textSize="18sp"
                        android:textColor="@android:color/holo_orange_light" />
            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Mô tả" />

            <TextView
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:textSize="16sp"
                    android:id="@+id/thing_description_text_view" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
            android:id="@+id/player_view_container"
            android:orientation="horizontal"
            android:layout_height="60dp"
            android:gravity="center|center_horizontal"
            android:background="@drawable/shape_bottom_nav_view"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_width="0dp">

        <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/play_button2"
                android:background="@drawable/baseline_replay_10_24"
                android:translationZ="90dp"
                android:stateListAnimator="@animator/zoom_out_animator"
                android:layout_marginRight="50dp" />

        <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/play_button"
                android:background="@drawable/icons8_pause_48"
                android:translationZ="90dp"
                android:stateListAnimator="@animator/zoom_out_animator"
                android:layout_marginRight="50dp" />

        <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/play_button3"
                android:background="@drawable/baseline_forward_10_24"
                android:translationZ="90dp"
                android:stateListAnimator="@animator/zoom_out_animator" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>