<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ViewQRActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical"
            android:translationZ="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp">

        <ImageButton
                android:src="@drawable/baseline_arrow_back_ios_24"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/back_button"
                android:background="@drawable/circle_back_button"
                android:scaleType="fitCenter"
                android:paddingStart="8dp"
                android:stateListAnimator="@animator/zoom_out_animator"
                tools:ignore="ContentDescription,RtlSymmetry" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/top_bar_text_view"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="409dp"
            android:layout_height="400dp"
            tools:layout_editor_absoluteX="1dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints"
            android:background="#A3A3A3"
            android:id="@+id/linearLayout"
            android:layout_marginBottom="100dp">

        <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:id="@+id/qr_image"
                tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/linearLayout"
            android:layout_marginTop="20dp">

        <TextView
                android:text="@string/thing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/thing_name_tv" />

        <TextView
                android:text="100000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/id_text_view"
                android:gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />
    </LinearLayout>

    <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar2"
            android:thumbTint="@color/white"
            android:thumb="@drawable/custom_thumb"
            android:progressTint="@color/white"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@id/player_view_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
            android:id="@+id/player_view_container"
            android:orientation="horizontal"
            android:layout_height="60dp"
            android:gravity="center|center_horizontal"
            android:background="@drawable/shape_bottom_nav_view"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_width="0dp">

        <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/play_button2"
                android:background="@drawable/baseline_replay_10_24"
                android:translationZ="90dp"
                android:stateListAnimator="@animator/zoom_out_animator"
                android:layout_marginRight="50dp" />

        <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/play_button"
                android:background="@drawable/icons8_pause_48"
                android:translationZ="90dp"
                android:stateListAnimator="@animator/zoom_out_animator"
                android:layout_marginRight="50dp" />

        <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/play_button3"
                android:background="@drawable/baseline_forward_10_24"
                android:translationZ="90dp"
                android:stateListAnimator="@animator/zoom_out_animator" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>