<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/shape"
        android:gravity="center_vertical"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:stateListAnimator="@animator/zoom_out_animator"
        android:focusable="true">

    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/notification_image"
                android:scaleType="centerCrop"
                android:contentDescription="@string/notification_image" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp">

        <TextView
                android:id="@+id/notification_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fcfcf9"
                android:textSize="22sp"
                android:text="Notification A"
                android:layout_marginBottom="5dp" />

        <TextView
                android:id="@+id/notification_short"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fcfcf9"
                android:textSize="17sp"
                android:text="Museum A" />
    </LinearLayout>

</LinearLayout>
