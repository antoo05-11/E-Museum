<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/item_rounded_corner">

    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp">

        <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            <ImageView
                    android:layout_width="107dp"
                    android:layout_height="100dp"
                    android:id="@+id/thing_image"
                    android:scaleType="centerCrop"
                    android:background="@drawable/grey_round_corner"
                    tools:ignore="ContentDescription" />

        </com.facebook.shimmer.ShimmerFrameLayout>


    </androidx.cardview.widget.CardView>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            style="@style/justify_text">

        <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_museum_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/museum_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fcfcf9"
                    android:textSize="20sp"
                    android:background="@drawable/grey_round_corner"
                    android:maxLines="2" />

        </com.facebook.shimmer.ShimmerFrameLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_museum_short_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp">

            <TextView
                    android:id="@+id/museum_short_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fcfcf9"
                    android:textSize="16sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:background="@drawable/grey_round_corner" />

        </com.facebook.shimmer.ShimmerFrameLayout>

    </LinearLayout>

</LinearLayout>
