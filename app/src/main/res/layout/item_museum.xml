<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/item_rounded_corner">

    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp">

        <ImageView
                android:layout_width="107dp"
                android:layout_height="100dp"
                android:id="@+id/thing_image"
                android:scaleType="centerCrop"
                android:contentDescription="Museum Image" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            style="@style/justify_text">

        <TextView
                android:id="@+id/thing_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fcfcf9"
                android:textSize="20sp"
                android:text="Museum A" />

        <TextView
                android:id="@+id/thing_short"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fcfcf9"
                android:textSize="16sp"
                android:text="Museum A"
                android:maxLines="3"
                android:ellipsize="end" />
    </LinearLayout>

</LinearLayout>
